.container {
  width: 100%;
  overflow-x: hidden;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  font-family: '\5FAE\8F6F\96C5\9ED1';
}
.container .container-head {
    position: relative;
    height: 340rpx;
    width: 100%;
    background-color: #EB3C39;
    text-align: center;
}
.container .container-head .order-box {
      padding-top: 100rpx;
}
.container .container-head .order-box .order {
        font-size: 80rpx;
        font-weight: bold;
        color: #ffffff;
}
.container .container-head .order-box .text {
        font-size: 30rpx;
        margin-top: 10rpx;
        color: #ffffff;
}
.container .container-head .pickup {
      position: absolute;
      top: 40rpx;
      left: 40rpx;
      color: #EB3C39;
      background-color: #ffffff;
      padding: 10rpx 14rpx;
      border-radius: 8rpx;
      font-size: 24rpx;
}
.container .container-head .pickup2 {
      right: 40rpx;
      left: auto;
}
.container .container-box {
    padding: 180rpx 0;
    background-color: #FFFFFF;
    margin-top: 20rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-wrap: wrap;
        -ms-flex-wrap: wrap;
            flex-wrap: wrap;
}
.container .container-box .index-item {
      position: relative;
      width: 33%;
      text-align: center;
      margin-bottom: 60rpx;
}
.container .container-box .index-item .number {
        position: absolute;
        top: 0;
        right: 60rpx;
        width: 40rpx;
        height: 40rpx;
        line-height: 40rpx;
        text-align: center;
        background-color: #EB3C39;
        color: #fff;
        font-size: 24rpx;
        border-radius: 50%;
}
.container .container-box .flex-icon {
      font-size: 80rpx;
      color: #EB3C39;
}
.container .container-box .flex-text {
      font-size: 30rpx;
      margin-top: 20rpx;
      color: #555555;
}

