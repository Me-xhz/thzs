.drawer_screen {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: rgba(0, 0, 0, 0.6);
	/* opacity: 0.2; */
	overflow: hidden;
	z-index: 1000;
	color: #fff;
}
.number-model-box {
	position: fixed;
	top: 50%;
	left: 50%;
	-ms-transform: translate(-50%, -50%);
	    transform: translate(-50%, -50%);
	-webkit-transform: translate(-50%, -50%);
	width: 600rpx;
	height: 70%;
	background-color: #ffffff;
	z-index: 1001
}
.number-model-box .header-text {
	text-align: center;
	border-bottom: 1rpx solid #f2f2f2;
	font-size: 32rpx;
	height: 80rpx;
	line-height: 80rpx;
}
.number-model-box .model-main {
	margin: 20rpx 0;
	width: 100%;
	text-align: center;
	font-size: 30rpx;
}
.number-model-box .model-main .main-title {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.number-model-box .model-main .main-number {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.number-model-box .model-scroll {
	height: 760rpx;
}
.number-model-box .model-list {
	width: 100%;
	font-size: 26rpx;
	padding: 10rpx 24rpx;
	min-height: 88rpx;
}
.number-model-box .model-list:nth-child(2n) {
	background-color: #f2f2f2
}
.number-model-box .model-list .list-name {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.number-model-box .model-list .list-name.red {
	color: red;
}
.number-model-box .model-list .list-number {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	text-align: center;
}
.list-pad {
	padding: 0 25rpx;
	padding-bottom: 40rpx;
	background-color: #ffffff;
}
.list-box {
	margin-bottom: 20rpx;
	background-color: #eeeeee;
	border-radius: 8rpx;
	padding: 45rpx 25rpx;
	overflow: hidden;
	position: relative;
}
.list-item {
	padding: 10rpx 0;
	color: #555555;
	font-size: 30rpx;
}
.list-time {
	position: absolute;
	right: 0;
	top: 0;
	background-color: #1DA1F2;
	color: #ffffff;
	padding: 10rpx;
	font-size: 24rpx;
}
.list-btn-box {
	position: absolute;
	right: 24rpx;
	bottom: 120rpx;
}
.list-btn-box .list-btn {
	background-color: #1DA1F2;
	color: #ffffff;
	padding: 0 10rpx;
	font-size: 28rpx;
	border-radius: 0;
	margin-bottom: 10rpx;
}
.list-status {
	position: absolute;
	left: 0;
	top: 0;
	background-color: #EB3C39;
	color: #ffffff;
	padding: 10rpx;
	font-size: 24rpx;
}

